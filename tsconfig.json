{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "target": "ES2021",
    "lib": ["DOM", "ES2015", "ES2021"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
